{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}
{% block header %}
{% endblock %}
{% block main %}
  {% if error %}
      <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}


  <main role="main">

    <div class="container">

      <div class="row">
        <div class="col-xs-12 text-center">
          <form class="login-form" action="{{ path('login') }}" method="post">
              <label for="username">Username:</label>
              <input type="text" id="username" name="_username" value="{{ last_username }}" /><br>

              <label for="password">Password:</label>
              <input type="password" id="password" name="_password" /><br><br>

              {#
                  If you want to control the URL the user
                  is redirected to on success (more details below)
                  <input type="hidden" name="_target_path" value="/account" />
              #}
              <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
              <button type="submit" class="btn btn-primary">login</button>
          </form>
          <br><br>
          <a href="{{path('user_registration')}}">Register</a>
        </div>
      </div>


    </div> <!-- /container -->

  </main>




{% endblock %}

{% block footer %}
{% endblock %}
